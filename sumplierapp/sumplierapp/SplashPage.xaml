<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sumplierapp.SplashPage">
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand">
        <ActivityIndicator x:Name="progressBar"
                           IsVisible="True"
                           IsRunning="True"
                           Color="DarkOrange"
                           VerticalOptions="EndAndExpand"
                           HeightRequest="110"
                           MinimumHeightRequest="110"
                           WidthRequest="110"
                           MinimumWidthRequest="110"/>
        <Label x:Name="StatusText"
               TextColor="Black"
               FontSize="Medium"
               FontFamily="{StaticResource SumplierRegular}"
               VerticalOptions="Start"
               HorizontalOptions="CenterAndExpand"/>
        <Label x:Name="PercentLabel"
               TextColor="Black"
               FontSize="Medium"
               FontFamily="{StaticResource SumplierRegular}"
               VerticalOptions="StartAndExpand"
               HorizontalOptions="CenterAndExpand"/>
    </StackLayout>
</ContentPage>